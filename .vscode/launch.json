{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug snmp2otel (CodeLLDB)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/snmp2otel",
            "args": [
                "-t", "127.0.0.1",
                "-C", "sim_data",
                "-o", "oids.txt",
                "-e", "http://localhost:4318/v1/metrics",
                "-i", "10",
                "-r", "2",
                "-T", "3",
                "-p", "1024",
                "-v"
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "preLaunchTask": "Build snmp2otel"
        }
    ]
}
